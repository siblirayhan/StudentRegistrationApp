@model InterviewApplication.Models.RegistrationTable
@{
    ViewData["Title"] = "Update Data";
}

<h1 class="text-center display-4">Add New Student</h1>
<form asp-action="UpdateData">
    <div class="form-group">
        <label>Student Name</label>
        <input type="text" asp-for="name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" asp-for="address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date of Admission</label>
        <input type="date" asp-for="dateofadmission" class="form-control" />
    </div>
    <div class="form-group">
        <label>Student Name</label>
        <select asp-for="classname" class="form-control">
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>
    </div>
    <button class="btn btn-outline-primary" type="submit">Submit</button>
</form>
